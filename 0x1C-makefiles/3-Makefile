SRC := main.c school.c
CC := gcc
RM := rm -f
OBJ := main.o school.o
NAME := school

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC) -c main.c
school.o: school.c m.h
	$(CC) -c school.c

re: $(OBJ)
	$(CC) -c $(SRC)
clean:
	$(RM) *~ *.gch
oclean:
	$(RM) main.o school.o


fclean:
	$(RM) *~ *.gch $(NAME)
	$(RM) main.o school.o

