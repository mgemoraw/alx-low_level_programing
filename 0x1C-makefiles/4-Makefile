SRC = main.c school.c
CC = gcc
RM = rm -f
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# main.o: main.c m.h
# 	$(CC) -c main.c $(CFLAGS)
# school.o: school.c m.h
# 	$(CC) -c school.c $(CFLAGS)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

re: oclean all

fclean: clean oclean
